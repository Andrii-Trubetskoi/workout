{% extends 'base.html.twig' %}

{% block body %}

    <h1>Search in categorys</h1>
    <form action="{{ path('homepage') }}">
        <libe for="searchName">
            Search by name
        </libe>
        <input id="searchName" name="q_name" type="text">
        <lible for="searchDate">
            Search by date
        </lible>
        <input id="searchDate" placeholder="search by date" name="q_date" type="date">
        <button>submit</button>
    </form>

    <h1>Category Found</h1>
    <div class="jumbotron">
        <ul class="nav nav-pills">
            {% for category in categorysFilter %}
                <li><a href="#">{{ category.name }}</a></li>
            {% endfor %}
        </ul>
    </div>

    <h1>All categorys</h1>
    <div class="jumbotron">
        <ul class="nav nav-pills">
            {% for category in categorys %}
                <li><a href="#">{{ category.name }}</a></li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
